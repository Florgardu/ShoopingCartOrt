@model ShoppingCartORT.Models.Pedido

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>Details</title>
</head>
    <body>
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Nombre producto
                    </th>
                    <th>
                        Precio Unitario
                    </th>
                    <th>
                        Cantidad
                    </th>
                    <th>
                        Total
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var Item in Model.items)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(x => Item.producto.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(x => Item.producto.precio)
                    </td>
                    <td>
                        @Html.DisplayFor(x => Item.cantidad)

                    </td>
                    <td>
                        @{var total = Item.ObtenerTotal();
                        }
                        @Html.DisplayFor(x => total)
                    </td>

                    <td>
                    </td>
                </tr>
                }
            </tbody>
        </table>


    </body>
</html>
