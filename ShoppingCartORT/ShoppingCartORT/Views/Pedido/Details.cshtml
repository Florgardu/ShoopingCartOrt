@model ShoppingCartORT.Models.Pedido

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

    <table class="table table-striped" style=" border: solid #d6d2d2 0.5px; box-shadow: 5px 10px 8px #888888;">
        <thead class="table-primary">
            <tr>
                <th>
                    Nombre producto
                </th>
                <th>
                    Precio Unitario
                </th>
                <th>
                    Cantidad
                </th>
                <th>
                    Total
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var Item in Model.items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(x => Item.producto.nombre)
                    </td>
                    <td>
                        $@Html.DisplayFor(x => Item.producto.precio)
                    </td>
                    <td>
                        @Html.DisplayFor(x => Item.cantidad)

                    </td>
                    <td>
                        @{var total = Item.ObtenerTotal();
                        }
                        $@Html.DisplayFor(x => total)
                    </td>

                    <td>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="button" class="btn btn-secondary" style=" float: right;">
        <a asp-area="" asp-controller="Pedido" asp-action="Index" style="color: white !important;text-decoration: none;">Volver</a>
    </button>
