@model IEnumerable<ShoppingCartORT.Models.Producto>
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ShoppingCartORT</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Producto" asp-action="Index">Productos</a>
                        </li>
                        @{
                            if (@HttpContextAccessor.HttpContext.Session.GetString("rol") == "ADMIN")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Pedido" asp-action="Index">Pedidos</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
                @{

                    if (@HttpContextAccessor.HttpContext.Session.GetString("user") == "" ||
                        @HttpContextAccessor.HttpContext.Session.GetString("user") == null)
                    {
                        <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">
                            <a asp-area="" asp-controller="Usuario" asp-action="Create">Registrarse </a>
                        </button>
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit" style="margin-left: 10px;">
                            <a asp-area="" asp-controller="Usuario" asp-action="Login">Ingresar</a>
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">
                            <a asp-area="" asp-controller="Usuario" asp-action="Logout">Logout </a>
                        </button>
                    }
                }
            </div>
        </nav>
    </header>
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row" style="box-shadow: 1px 11px 8px #888888;">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img src="img/@Url.Content(item.imagePath)" style="height:255px;width:100%;" alt="Image" />
                            <div class="card-body">
                                <p class="card-text" style="display:none;">
                                    <span>
                                        <strong>ID:</strong>
                                    </span>
                                    <span class="idProducto">@Html.DisplayFor(modelItem => item.productoID)</span>
                                </p>
                                <p class="card-text">
                                    <span>
                                        <strong>Nombre:</strong>
                                    </span>@Html.DisplayFor(modelItem => item.nombre)
                                </p>
                                <p class="card-text">
                                    <span>
                                        <strong>Descripci√≥n:</strong>
                                    </span>@Html.DisplayFor(modelItem => item.descripcion)
                                </p>
                                <p class="card-text">
                                    <span>
                                        <strong>Precio:</strong>
                                    </span>$ @Html.DisplayFor(modelItem => item.precio)
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span style="margin-left: 75px;">
                                        Cantidad:
                                    </span>
                                    <input type="number" class="text-muted valorCantidad" style="width: 50px;">
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="d-flex flex-row-reverse bd-highlight" style="margin-top:20px;margin-right: 11%;">
            <button type="button" class="btn btn-success" id="btnSave">
                Crear Pedido
            </button>
        </div>
    </div>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="https://ajax.cdnjs.com/ajax/libs/json2/20110223/json2.js"></script>
    <script type="text/javascript">
        $("body").on("click", "#btnSave", function () {
            //Send the JSON array to Controller using AJAX.
            var productos = $(".idProducto");
            var cantidades = $(".valorCantidad");
            var items = new Array();
            for (var i = 0; i < productos.length; i++) {
                debugger;
                if (parseInt(cantidades[i].value) > 0) {
                    var item = {};
                    var producto = {}
                    producto.productoID = parseInt(productos[i].innerHTML);
                    item.cantidad = parseInt(cantidades[i].value);
                    item.producto = producto;
                    items.push(item);
                }
            }

            $.ajax({
                type: "POST",
                url: "/Pedido/Create",
                cache: false,
                data: "items : " + JSON.stringify(items),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (r) {
                    alert(r + " OK");
                }
            });
        })
    </script>
</body>
</html>
