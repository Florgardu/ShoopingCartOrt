@model IEnumerable<ShoppingCartORT.Models.Producto>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ShoppingCartORT</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row" style="box-shadow: 1px 11px 8px #888888;">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img src="img/@Url.Content(item.imagePath)" style="height:255px;width:100%;" alt="Image" />
                            <div class="card-body">
                                <p class="card-text">
                                    <span>
                                        <strong>Nombre:</strong>
                                    </span>@Html.DisplayFor(modelItem => item.nombre)
                                </p>
                                <p class="card-text">
                                    <span>
                                        <strong>Descripci√≥n:</strong>
                                    </span>@Html.DisplayFor(modelItem => item.descripcion)
                                </p>
                                <p class="card-text">
                                    <span>
                                        <strong>Precio:</strong>
                                    </span>$ @Html.DisplayFor(modelItem => item.precio)
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-primary">Agregar</button>
                                    </div>
                                    <span style="margin-left: 75px;">
                                        Cantidad:
                                    </span>
                                    <input type="number" class="text-muted" style="width: 50px;">
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="d-flex flex-row-reverse bd-highlight" style="margin-top:20px;margin-right: 11%;">
            <button type="button" class="btn btn-success">Crear Pedido</button>
        </div>
    </div>
</body>
</html>
